{
    "compilerOptions": {
     "baseUrl": "./",
     "paths": {
        "@src/*": ["./src/*"]
      },
     "incremental": true,
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "typeRoots": ["./src/typings/", "node_modules/@types" ],
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }